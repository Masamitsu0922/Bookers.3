<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/8f5dcc4261.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-static-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="headline">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%=link_to user_path(current_user.id) do %><i class="glyphicon glyphicon-home" aria-hidden="true"></i> Home<% end %></li>
              <li><%=link_to users_path do %><i class="glyphicon glyphicon-user" aria-hidden="true"></i> Users<% end %></li>
              <li><%=link_to books_path do %><i class="glyphicon glyphicon-book" aria-hidden="true"></i> Books<% end %></li>
              <li><%=link_to destroy_user_session_path, method: :delete do %><i class="glyphicon glyphicon-log-out" aria-hidden="true"></i> logout<% end %></li>
            <% else %>
              <li><%=link_to root_path do %>
                <i class="glyphicon glyphicon-home" aria-hidden="true"></i>
                 Home
                <% end %>
              </li>
              <li><%=link_to home_about_path do %>
                <i class="glyphicon glyphicon-link"></i>
                 About
                <% end %>
              </li>
              <li><%=link_to new_user_registration_path do %>
                <i class="glyphicon glyphicon-edit"></i>
                 sign up
                <% end %>
              </li>
               <li><%=link_to new_user_session_path do %>
                <i class="glyphicon glyphicon-log-in"></i>
                 login
                <% end %>
            <% end %>
          </ul>
      </nav>
    </div>
    </header>

     <% if user_signed_in? %>
      <%= render 'searchs/window' %>
      <% end %>

    <%=yield%>
  </body>
</html>
