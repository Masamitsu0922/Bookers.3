<!-- 投稿情報の編集ページ -->
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
		<% if @book.errors.any? %>
		    <div>
		      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

		      <ul>
		        <% @book.errors.full_messages.each do |message| %>
		          <li><%= message %></li>
	     		<% end %>
	      	  </ul>
  			</div>
    	<% end %>
		<%= form_for(@book) do |f| %>
		<div class="field row">
			<h4>Title</h4>
			<%= f.text_field :title, class:"col-xs-12" %>
		</div>
		<div class="field row">
			<h4>Opinion</h4>
			<%= f.text_area :body, class:"col-xs-12" %>
		</div>
		<br>
		<div class="field row">
			<%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
		</div>
		<% end %>
		<br>
		<%= link_to 'Show',book_path(@book) %>
		 |
		<%= link_to 'Back',books_path %>
	</div>
	</div>
</div>